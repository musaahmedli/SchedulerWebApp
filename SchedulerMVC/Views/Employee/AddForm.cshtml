@model EmployeeToAddViewModel

@{ 
    Layout = null;
}

<style>
    input[type="file"] {
        display: none;
    }
    .custom-file-upload {
        background-color: #072168;
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }
</style>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap" />
<link rel="stylesheet" href="~/RegisterForm/regForm.css" />
<div class="form-body">
    <div class="row">
        <div class="form-holder container">
            <div class="form-content">
                <div class="form-items">
                    <h3>Register Employee</h3>
                    <p>Fill in the data below.</p>
                    <form asp-controller="Employee" asp-action="Add" enctype="multipart/form-data">

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Employee.Name" placeholder="Name" required>
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Employee.Surname" placeholder="Surname" required>
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Employee.EMail" placeholder="Email" required>
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Employee.Username" placeholder="Username" required>
                        </div>

                        <div class="col-md-12">
                            <input class="form-control " type="password" asp-for="@Model.Employee.Password" placeholder="Password" required>
                        </div>
                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Employee.PhoneNumber" placeholder="Phone Number" required>
                        </div>
                        <div class="col-md-12 mt-2">
                            @*<input class="form-control" type="file" asp-for="@Model.Employee.Image" required>*@
                            <label class="custom-file-upload">
                                <input type="file" asp-for="@Model.Employee.Image" />
                                Your Image
                            </label>
                        </div>

                        <div class="col-md-12 mt-2">
                            <select class="form-select" asp-for="@Model.Employee.SectorId" asp-items="@(new SelectList(Model.Sectors,"SectorId","Name"))"></select>
                        </div>

                        <div class="col-md-12">
                            <select class="form-select" asp-for="@Model.Employee.PositionId" asp-items="@(new SelectList(Model.Positions,"PositionId","Name"))"></select>
                        </div>

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-secondary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
