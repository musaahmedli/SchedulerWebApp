@model SchedulerMVC.Models.SectorModels.SectorToUpdateViewModel

<link rel="stylesheet" href="~/lib/bootstrap" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/RegisterForm/regForm.css" />
<link rel="stylesheet" href="~/fonts/font.css" />


<div class="form-body">
    <div class="row">
        <div class="form-holder container">
            <div class="form-content">
                <div class="form-items">
                    <h3>Update Sector</h3>
                    <p>Fill in the data below.</p>
                    <form asp-controller="Sector" asp-action="Update">
                        <div class="col-md-12 d-none">
                            <input class="form-control" type="text" asp-for="@Model.sector.SectorId" required>
                        </div>

                        <div class="col-md-12">
                            <label>Name</label>
                            <input class="form-control" type="text" asp-for="@Model.sector.Name" required>
                        </div>

                        <div class="col-md-12">
                            <label>Departments</label>
                            <select class=" form-control form-select" asp-for="@Model.sector.DepartmentId" asp-items="@(new SelectList(Model.Departments,"DepartmentId","Name"))"></select>
                        </div>

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>