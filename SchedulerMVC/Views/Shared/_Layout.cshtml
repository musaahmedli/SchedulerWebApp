<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-16" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchedulerMVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap" />
    <!-- Google Font: Source Sans Pro -->
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css"  >

    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!--Fonts-->
    
    <style>
        * {
            font-family: 'Inconsolata', monospace;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
    <link rel="icon" href="~/favicon.ico" type="image/x-icon"/>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Organization" asp-action="Index" class="nav-link"> &#399sas Səhifə</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li>
                    <a asp-controller="Home" asp-action="Logout" class="nav-link">
                        <i class="nav-icon fa-bold fa fa-door-open inline">Çıxış</i>

                    </a>
                </li>

            </ul>
        </nav>
    </div>
    
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a class="brand-link">
            <img src="~/AdminLTE/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light text-light">Scheduler App</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar ">
            <!-- Sidebar user panel (optional) -->
            <!-- SidebarSearch Form -->
            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2 ">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a asp-controller="Organization" asp-action="Index" class="nav-link">
                            <i class="nav-icon  fas fa-building"></i>
                            <p>
                                Təşkilatlar
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Department" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-sitemap "></i>
                            <p>
                                Şöbələr
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Sector" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-vector-square"></i>
                            <p>
                                Sektorlar
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Employee" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-briefcase"></i>
                            <p>
                                İşçilər
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Position" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-map-pin"></i>
                            <p>
                                Vəzifələr
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Project" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-project-diagram"></i>
                            <p>
                                Layihələr
                            </p>
                        </a>
                    </li>
                    <li class="nav-item mb-5">
                        <a asp-controller="MeetingDays" asp-action="Index" class="nav-link">
                            <i class="nav-icon far fa-calendar"></i>
                            <p>
                                Həftəlik Cədvəl
                            </p>
                        </a>
                    </li>

                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <div class="">
        <div class="mt-2 container">
            @RenderBody()
        </div>
    </div>





    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
