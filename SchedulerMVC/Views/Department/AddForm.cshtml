
@model DepartmentToAddViewModel

<link rel="stylesheet" href="~/RegisterForm/regForm.css" />
<div class="form-body">
    <div class="row">
        <div class="form-holder container">
            <div class="form-content">
                <div class="form-items">
                    <h3>Add Project</h3>
                    <p>Fill in the data below.</p>
                    <form asp-controller="Department" asp-action="Add">

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.Department.Name" name="name" placeholder="Name" required>
                        </div>

                        <div class="col-md-12">
                            select class=" form-control form-select" asp-for="@Model.Department.OrganizationId" asp-items="@(new SelectList(Model.Organizations,"OrganizationId","Name"))"></select>
                        </div>

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



