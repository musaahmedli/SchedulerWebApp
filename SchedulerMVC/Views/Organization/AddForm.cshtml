@model SchedulerMVC.Models.OrganizationModels.OrganizationToAddViewModel
<link rel="stylesheet" href="~/lib/bootstrap" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/RegisterForm/regForm.css" />
<link rel="stylesheet" href="~/fonts/font.css" />

<div class="form-body">
    <div class="row">
        <div class="form-holder container">
            <div class="form-content">
                <div class="form-items">
                    <h3>
                        Təşkilat əlavə edin
                    </h3>
                    <p>
                        Aşağıdakı məlumatları doldurun.
                    </p>
                    <form asp-controller="Organization" asp-action="Add">

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="@Model.organizationToAdd.Name" placeholder="Name" required>
                        </div>

                        <div class="col-md-12">
                            <select class="form-control form-select" asp-for="@Model.organizationToAdd.ParentOrganizationId" asp-items="@(new SelectList(Model.Organizations,"OrganizationId","Name"))">
                                <option>
                                    Üst Təşkilat yoxdur
                                </option>
                            </select>
                        </div>

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">
                                Əlavə edin
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>