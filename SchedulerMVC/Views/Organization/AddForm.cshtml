 @model OrganizationToAddViewModel
<form asp-controller="Organization" asp-action="Add">
    <div class="form-group">
        <input type="text" class="form-control" asp-for="@Model.organizationToAdd.Name" id="txtOrganizationName" placeholder="Organization">
    </div>
    <div class="form-group">
        <select class="form-select form-control" asp-for="@Model.organizationToAdd.ParentOrganizationId" asp-items="@(new SelectList(Model.Organizations,"OrganizationId","Name"))">
            <option selected="">No Parent Organization</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
