@model OrganizationToUpdateViewModel

<form asp-controller="Organization" asp-action="Update">
    <div class="form-group invisible">
        <input type="text" class="form-control" asp-for="@Model.Organization.OrganizationId" id="txtOrganizationId" placeholder="OrganizationId">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" asp-for="@Model.Organization.Name" id="txtOrganizationName" placeholder="Organization">
    </div>
    <div class="form-group">
        <select class="form-select form-control" asp-for="@Model.Organization.ParentOrganizationId" asp-items="@(new SelectList(Model.Organizations,"OrganizationId","Name"))">
            <option selected="">No Parent Organization</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>